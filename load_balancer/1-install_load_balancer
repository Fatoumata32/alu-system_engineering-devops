#!/usr/bin/env bash
# This script installs and configures HAProxy on the lb-01 server to distribute traffic to web-01 and web-02 using a round-robin algorithm.

# Set the correct hostname for the lb-01 server
HOSTNAME="lb-01"  # Change this if needed, this is the load balancer hostname
sudo hostnamectl set-hostname $HOSTNAME

# Update and install HAProxy
sudo apt-get -y update
sudo apt-get -y install haproxy

# Configure HAProxy to use round-robin and send traffic to web-01 and web-02
server_config="
frontend lb_frontend
    bind *:80
    mode http
    default_backend lb_backend

backend lb_backend
    balance roundrobin
    server web-01 web-01:80 check
    server web-02 web-02:80 check
"

# Append HAProxy configuration to the main config file
echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# Enable HAProxy to start on boot
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Test the HAProxy configuration file for syntax errors
sudo haproxy -c -f /etc/haproxy/haproxy.cfg

# Reload HAProxy to apply the new configuration
sudo service haproxy reload

# Confirm HAProxy is working and sending traffic to web-01 and web-02
echo "HAProxy configured to distribute traffic to web-01 and web-02 using round-robin."

# Output the current hostname of the server to verify it was set correctly
echo "Current hostname: $(hostname)"
