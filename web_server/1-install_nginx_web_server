#!/usr/bin/env bash
# This script installs and configures Nginx to serve "Holberton School" at the root URL

# Update the package list and install Nginx
sudo apt-get update -y && sudo apt-get install -y nginx

# Check if Nginx was installed successfully
if ! command -v nginx > /dev/null; then
    echo "Nginx installation failed."
    exit 1
fi

# Create a custom HTML page with the content "Holberton School" at the root
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Ensure Nginx is configured to listen on port 80 and properly serve the page
sudo sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default
sudo sed -i 's/listen \[::\]:80 default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default

# Restart Nginx to apply the configuration
sudo service nginx restart

# Allow HTTP traffic through the firewall (if `ufw` is installed)
if command -v ufw > /dev/null; then
    sudo ufw allow 'Nginx HTTP'
fi

# Wait for Nginx to start properly
sleep 2

# Verify that the page at root contains "Holberton School"
if curl -s http://localhost | grep -q "Holberton School"; then
    echo "Nginx is correctly serving 'Holberton School' at the root page."
else
    echo "Error: 'Holberton School' not found in the root page."
    exit 1
fi
