#!/usr/bin/env bash
# Bash script to install Nginx and configure it to serve "Holberton School" at root

# Update package lists and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Create a custom HTML page with the content "Holberton School"
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Ensure Nginx is configured to serve on port 80
sudo sed -i 's/listen \[::\]:80 default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default
sudo sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default

# Restart Nginx to apply configuration changes
sudo service nginx restart

# Verify the content at root
curl -s http://localhost | grep "Holberton School" > /dev/null

if [ $? -eq 0 ]; then
    echo "Nginx is serving 'Holberton School' at the root page."
else
    echo "Error: 'Holberton School' not found on the root page."
    exit 1
fi
